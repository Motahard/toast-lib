{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@constants": ["constants/"],
      "@interfaces": ["interfaces/"],
      "@services": ["services/"],
      "@utils": ["utils/"],
      "@Portal": ["Portal/"],
      "@styles": ["styles/theme"]
    }
  },
  "include": ["src", "declaration.d.ts", "*.stories.tsx"],
  "exclude": ["node_modules"]
}